<Project>

    <!-- ============================= -->
    <!--            APP INFO          -->
    <!-- ============================= -->
    <meta 
        title="ExtensionDiscordRPC"
        package="com.brenninho.extensiondiscordrpc"
        version="1.0.0"
        company="Brenninho123"
    />

    <app main="Main" path="export" file="ExtensionDiscordRPC" />

    <!-- ============================= -->
    <!--           WINDOW             -->
    <!-- ============================= -->
    <window 
        width="1280"
        height="720"
        fps="60"
        background="#0f0f14"
        hardware="true"
        vsync="true"
        resizable="false"
    />

    <!-- ============================= -->
    <!--           SOURCE             -->
    <!-- ============================= -->
    <source path="source" />

    <!-- ============================= -->
    <!--          LIBRARIES           -->
    <!-- ============================= -->
    <haxelib name="lime" />
    <haxelib name="openfl" />

    <!-- ============================= -->
    <!--        WINDOWS TARGET        -->
    <!-- ============================= -->
    <target name="windows" />
    <haxedef name="desktop" />
    <haxedef name="HXCPP_M64" />

    <!-- Include C++ only for Windows -->
    <if condition="windows">
        <include path="project/src" />
        <include path="project/include" />
        <ndll name="extension-discordrpc" />
    </if>

    <!-- ============================= -->
    <!--        ANDROID TARGET        -->
    <!-- ============================= -->
    <target name="android" />
    <haxedef name="android" />

    <!-- Android SDK / NDK Config -->
    <set name="android-ndk" value="23.1.7779620" />
    <set name="android-sdk" value="33" />
    <set name="android-min-sdk" value="21" />

    <!-- ============================= -->
    <!--        BUILD DEFINES          -->
    <!-- ============================= -->
    <haxedef name="DISCORD_NATIVE" />

</Project>