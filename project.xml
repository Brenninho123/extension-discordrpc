<Project>

    <!-- ============================= -->
    <!--            APP INFO          -->
    <!-- ============================= -->

    <meta 
        title="ExtensionDiscordRPC"
        package="com.brenninho.extensiondiscordrpc"
        version="1.0.0"
        company="Brenninho123"
    />

    <app main="Main" path="export" file="ExtensionDiscordRPC" />

    <!-- ============================= -->
    <!--           WINDOW             -->
    <!-- ============================= -->

    <window 
        width="1280"
        height="720"
        fps="60"
        background="#0f0f14"
        hardware="true"
        vsync="true"
        resizable="false"
        allow-shaders="true"
    />

    <!-- ============================= -->
    <!--           SOURCE             -->
    <!-- ============================= -->

    <source path="source" />

    <!-- ============================= -->
    <!--          LIBRARIES           -->
    <!-- ============================= -->

    <haxelib name="lime" />
    <haxelib name="openfl" />

    <!-- ============================= -->
    <!--        WINDOWS TARGET        -->
    <!-- ============================= -->

    <target name="windows" />

    <!-- ============================= -->
    <!--         DEFINES              -->
    <!-- ============================= -->

    <haxedef name="desktop" />
    <haxedef name="HXCPP_M64" />
    <haxedef name="DISCORD_RPC_ENABLED" />

    <!-- ============================= -->
    <!--       RELEASE OPTIMIZATION   -->
    <!-- ============================= -->

    <set name="cpp" />
    <set name="static_link" value="true" />
    <set name="no_console" value="true" if="release" />

</Project>